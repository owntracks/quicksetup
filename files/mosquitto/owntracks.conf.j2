# {{ ansible_managed }}

connection_messages true
log_dest topic
log_type error
log_type warning
log_type notice
log_type information
log_type all
log_type debug
log_timestamp true

max_inflight_messages 20
max_queued_messages 9000

acl_file /etc/mosquitto/mosquitto.acl
password_file /etc/mosquitto/mosquitto.pw

